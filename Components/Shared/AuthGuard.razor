@using Mero_Dainiki.Services
@inject IJSRuntime JS
@inject NavigationManager Navigation
@inject IAuthService AuthService

@if (IsLoading)
{
    <div class="auth-loading">
        <div class="spinner-border text-primary" role="status">
            <span class="visually-hidden">Loading...</span>
        </div>
    </div>
}
else if (IsAuthenticated)
{
    @ChildContent
}
else
{
    <div class="auth-required">
        <div class="auth-required-card">
            <div class="auth-icon">
                <i class="bi bi-lock-fill"></i>
            </div>
            <h3>Authentication Required</h3>
            <p>Please log in to access this feature.</p>
            <a href="/login" class="btn btn-primary">
                <i class="bi bi-box-arrow-in-right me-2"></i>Sign In
            </a>
            <p class="mt-3">
                <small class="text-muted">
                    Don't have an account? <a href="/register">Create one</a>
                </small>
            </p>
        </div>
    </div>
}

@code {
    [Parameter]
    public RenderFragment? ChildContent { get; set; }

    private bool IsLoading { get; set; } = true;
    private bool IsAuthenticated { get; set; } = false;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await CheckAuthentication();
        }
    }

    private async Task CheckAuthentication()
    {
        try
        {
            var userId = await AuthService.ValidateUserAsync(JS);
            IsAuthenticated = userId > 0;
            if (!IsAuthenticated) Navigation.NavigateTo("/", true);
        }
        catch
        {
            IsAuthenticated = false;
            Navigation.NavigateTo("/", true);
        }
        finally
        {
            IsLoading = false;
            StateHasChanged();
        }
    }
}


<style>
    .auth-loading {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 400px;
    }

    .auth-required {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 60vh;
        padding: 2rem;
    }

    .auth-required-card {
        text-align: center;
        padding: 3rem;
        background: rgba(255, 255, 255, 0.95);
        border-radius: 20px;
        box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
        max-width: 400px;
    }

    :global(.removed-dark) .auth-required-card {
        background: rgba(26, 26, 26, 0.95);
        color: #f5f5f5;
    }

    .auth-icon {
        font-size: 4rem;
        color: var(--primary-color, #6366f1);
        margin-bottom: 1.5rem;
    }

    .auth-required-card h3 {
        font-weight: 700;
        margin-bottom: 0.5rem;
    }

    .auth-required-card p {
        color: #64748b;
        margin-bottom: 1.5rem;
    }

    :global(.removed-dark) .auth-required-card p {
        color: #a3a3a3;
    }
</style>
