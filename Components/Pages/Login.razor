@page "/"
@page "/login"
@using Mero_Dainiki.Services
@using Mero_Dainiki.Models
@using Microsoft.AspNetCore.Components.Web
@layout Mero_Dainiki.Components.Layout.EmptyLayout
@inject IAuthService AuthService
@inject IThemeService ThemeService
@inject NavigationManager Navigation
@implements IDisposable

<main class="login-page-root">
    <!-- Left Side - Editorial Content -->
    <div class="brand-overlay">
        <h2 class="brand-quote">
            A quiet space for your <span>truest thoughts.</span>
        </h2>
    </div>

    <div class="login-container">
        <!-- Theme Toggle -->
        <div class="theme-toggle-wrapper">
            <button class="btn-theme-toggle" @onclick="ThemeService.ToggleThemeAsync" title="Change Theme">
                <i class="bi @(ThemeService.CurrentTheme == Mero_Dainiki.Entities.ThemeMode.Dark ? "bi-sun-fill" : "bi-moon-fill")"></i>
            </button>
        </div>

        <div class="login-card">
            <!-- Brand Icon -->
            <div class="login-icon-wrapper fade-in">
                <i class="bi bi-journal-text"></i>
            </div>

            <!-- Title Section -->
            <h1 class="fade-in">Sign In</h1>
            <p class="text-muted fade-in">Enter your credentials to access your diary.</p>

            <!-- Login Form -->
            <div class="login-form fade-up">
                <!-- Username/Email Input -->
                <div class="mb-4">
                    <label for="username" class="form-label">Username or Email</label>
                    <div class="input-group">
                        <span class="input-group-text"><i class="bi bi-person"></i></span>
                        <input type="text" 
                               class="form-control" 
                               id="username" 
                               placeholder="e.g. sujan123"
                               @bind="Username"
                               @bind:event="oninput"
                               @onkeypress="HandleKeyPress" />
                    </div>
                </div>

                <!-- Password Input -->
                <div class="mb-4">
                    <label for="password" class="form-label">Password</label>
                    <div class="input-group">
                        <span class="input-group-text"><i class="bi bi-lock"></i></span>
                        <input type='@(ShowPassword ? "text" : "password")' 
                               class="form-control" 
                               id="password" 
                               placeholder="********"
                               @bind="Password"
                               @bind:event="oninput"
                               @onkeypress="HandleKeyPress" />
                        <button class="btn btn-outline-secondary" type="button" @onclick="TogglePasswordVisibility">
                            <i class='bi bi-eye@(ShowPassword ? "-slash" : "")'></i>
                        </button>
                    </div>
                </div>

                <!-- Error Message -->
                @if (!string.IsNullOrEmpty(ErrorMessage))
                {
                    <div class="alert alert-danger py-2 px-3 mb-4 small" role="alert">
                        <i class="bi bi-exclamation-circle me-2"></i>
                        @ErrorMessage
                    </div>
                }

                <!-- Login Button -->
                <button class="btn btn-primary login-btn w-100 mb-4" 
                        @onclick="HandleLogin" 
                        disabled="@IsLoading">
                    @if (IsLoading)
                    {
                        <span class="spinner-border spinner-border-sm me-2"></span>
                        <span>Verifying...</span>
                    }
                    else
                    {
                        <span>Login</span>
                        <i class="bi bi-arrow-right"></i>
                    }
                </button>

                <!-- Sign Up Link -->
                <div class="text-center">
                    <small>
                        New here? <a href="/register">Create an account</a>
                    </small>
                </div>
            </div>
        </div>

        <!-- Security Notice -->
        <div class="security-footer fade-in-delayed">
            <i class="bi bi-shield-check me-1"></i>
            Self-hosted & Private
        </div>
    </div>
</main>

@code {
    [Inject]
    private IJSRuntime JS { get; set; } = default!;

    private string Username { get; set; } = string.Empty;
    private string Password { get; set; } = string.Empty;
    private bool ShowPassword { get; set; } = false;
    private bool RememberMe { get; set; } = false;
    private bool IsLoading { get; set; } = false;
    private string? ErrorMessage { get; set; }

    protected override async Task OnInitializedAsync()
    {
        ThemeService.OnThemeChanged += StateHasChanged;
        
        // Use a small delay to ensure JS is ready if needed, 
        // though OnInitializedAsync is usually fine for checking MAUI preferences
        var isAuthenticated = await AuthService.IsAuthenticatedAsync();
        if (isAuthenticated)
        {
            Navigation.NavigateTo("/dashboard");
        }
    }

    private void TogglePasswordVisibility()
    {
        ShowPassword = !ShowPassword;
    }

    private async Task HandleKeyPress(KeyboardEventArgs e)
    {
        if (e.Key == "Enter")
        {
            await HandleLogin();
        }
    }

    private async Task HandleLogin()
    {
        ErrorMessage = null;

        if (string.IsNullOrWhiteSpace(Username))
        {
            ErrorMessage = "Please enter your username";
            return;
        }

        if (string.IsNullOrWhiteSpace(Password))
        {
            ErrorMessage = "Please enter your password";
            return;
        }

        IsLoading = true;
        
        try
        {
            var result = await AuthService.LoginAsync(new UserAuthModel 
            { 
                Username = Username, 
                Password = Password 
            });

            if (result.Success)
            {
                // Store username in localStorage for NavMenu display
                await JS.InvokeVoidAsync("localStorage.setItem", "username", result.Data?.Username ?? Username);
                await JS.InvokeVoidAsync("localStorage.setItem", "userId", result.Data?.Id.ToString() ?? "");
                await JS.InvokeVoidAsync("localStorage.setItem", "authToken", "dummy_token"); // Fix for MainLayout auth check
                
                // Store expiration for 7 days
                var expiration = DateTime.UtcNow.AddDays(7).ToString("O");
                await JS.InvokeVoidAsync("localStorage.setItem", "authExpiration", expiration);
                
                // Navigate to dashboard
                Navigation.NavigateTo("/dashboard", true);
            }
            else
            {
                ErrorMessage = result.ErrorMessage ?? "Login failed";
            }
        }
        catch (Exception ex)
        {
            ErrorMessage = $"Error: {ex.Message}";
        }
        finally
        {
            IsLoading = false;
        }
    }

    public void Dispose()
    {
        ThemeService.OnThemeChanged -= StateHasChanged;
    }
}

