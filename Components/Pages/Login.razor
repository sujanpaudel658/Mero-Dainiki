@page "/login"
@using Mero_Dainiki.Services
@using Mero_Dainiki.Models
@using Microsoft.AspNetCore.Components.Web
@inject IAuthService AuthService
@inject NavigationManager Navigation

<main class="login-page-root">
    <div class="login-container">
        <div class="login-card">
            <!-- Logo/Brand Section -->
            <div class="text-center mb-4 fade-in">
                <div class="login-icon-wrapper mb-3">
                    <i class="bi bi-lock-fill"></i>
                </div>
                <h1 class="fw-bold mb-2">Mero Dainiki</h1>
                <p class="text-muted mb-0">Secure your journal</p>
            </div>

            <!-- Login Form -->
            <div class="login-form fade-up">
                <!-- Username/Email Input -->
                <div class="mb-3">
                    <label for="username" class="form-label fw-semibold">Username or Email</label>
                    <div class="input-group">
                        <span class="input-group-text bg-light">
                            <i class="bi bi-person-fill"></i>
                        </span>
                        <input type="text" 
                               class="form-control form-control-lg" 
                               id="username" 
                               placeholder="Enter your username or email"
                               @bind="Username"
                               @onkeypress="HandleKeyPress" />
                    </div>
                </div>

                <!-- Password Input -->
                <div class="mb-3">
                    <label for="password" class="form-label fw-semibold">Password</label>
                    <div class="input-group">
                        <span class="input-group-text bg-light">
                            <i class="bi bi-lock-fill"></i>
                        </span>
                        <input type='@(ShowPassword ? "text" : "password")' 
                               class="form-control form-control-lg" 
                               id="password" 
                               placeholder="Enter your password"
                               @bind="Password"
                               @onkeypress="HandleKeyPress" />
                        <button class="btn btn-outline-secondary" type="button" @onclick="TogglePasswordVisibility">
                            <i class='bi bi-eye@(ShowPassword ? "-slash" : "")-fill'></i>
                        </button>
                    </div>
                </div>

                <!-- Remember Me -->
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" id="rememberMe" @bind="RememberMe" />
                        <label class="form-check-label" for="rememberMe">
                            Remember me
                        </label>
                    </div>
                </div>

                <!-- Error Message -->
                @if (!string.IsNullOrEmpty(ErrorMessage))
                {
                    <div class="alert alert-danger d-flex align-items-center mb-3" role="alert">
                        <i class="bi bi-exclamation-triangle-fill me-2"></i>
                        <div>@ErrorMessage</div>
                    </div>
                }

                <!-- Login Button -->
                <button class="btn btn-primary btn-lg w-100 mb-3 login-btn" 
                        @onclick="HandleLogin" 
                        disabled="@IsLoading">
                    @if (IsLoading)
                    {
                        <span class="spinner-border spinner-border-sm me-2" role="status"></span>
                        <span>Authenticating...</span>
                    }
                    else
                    {
                        <i class="bi bi-box-arrow-in-right me-2"></i>
                        <span>Login</span>
                    }
                </button>

                <!-- Sign Up Link -->
                <div class="text-center">
                    <small class="text-muted">
                        Don't have an account? <a href="/register" class="text-decoration-none">Sign up here</a>
                    </small>
                </div>
            </div>
        </div>

        <!-- Security Notice -->
        <div class="text-center mt-4 fade-in-delayed">
            <small class="text-muted">
                <i class="bi bi-shield-check me-1"></i>
                Your data is encrypted and stored locally
            </small>
        </div>
    </div>
</main>

@code {
    [Inject]
    private IJSRuntime JS { get; set; } = default!;

    private string Username { get; set; } = string.Empty;
    private string Password { get; set; } = string.Empty;
    private bool ShowPassword { get; set; } = false;
    private bool RememberMe { get; set; } = false;
    private bool IsLoading { get; set; } = false;
    private string? ErrorMessage { get; set; }

    private void TogglePasswordVisibility()
    {
        ShowPassword = !ShowPassword;
    }

    private async Task HandleKeyPress(KeyboardEventArgs e)
    {
        if (e.Key == "Enter")
        {
            await HandleLogin();
        }
    }

    private async Task HandleLogin()
    {
        ErrorMessage = null;

        if (string.IsNullOrWhiteSpace(Username))
        {
            ErrorMessage = "Please enter your username";
            return;
        }

        if (string.IsNullOrWhiteSpace(Password))
        {
            ErrorMessage = "Please enter your password";
            return;
        }

        IsLoading = true;
        
        try
        {
            var result = await AuthService.LoginAsync(new UserAuthModel 
            { 
                Username = Username, 
                Password = Password 
            });

            if (result.Success)
            {
                // Save authentication token and user ID
                await JS.InvokeVoidAsync("localStorage.setItem", "authToken", result.Data!.Id.ToString());
                await JS.InvokeVoidAsync("localStorage.setItem", "userId", result.Data!.Id.ToString());
                await JS.InvokeVoidAsync("localStorage.setItem", "username", result.Data!.Username);
                
                if (RememberMe)
                {
                    await JS.InvokeVoidAsync("localStorage.setItem", "rememberMe", "true");
                    await JS.InvokeVoidAsync("localStorage.setItem", "lastUsername", Username);
                }
                Navigation.NavigateTo("/dashboard");
            }
            else
            {
                ErrorMessage = result.ErrorMessage ?? "Login failed";
            }
        }
        catch (Exception ex)
        {
            ErrorMessage = $"Error: {ex.Message}";
        }
        finally
        {
            IsLoading = false;
        }
    }
}

