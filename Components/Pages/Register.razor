@page "/register"
@using Mero_Dainiki.Services
@using Mero_Dainiki.Models
@layout Mero_Dainiki.Components.Layout.EmptyLayout
@implements IDisposable
@inject IAuthService AuthService
@inject IThemeService ThemeService
@inject NavigationManager Navigation
@inject IJSRuntime JS

<main class="register-page-root">
    <!-- Left Side - Editorial Content -->
    <div class="brand-overlay">
        <h2 class="brand-quote">
            Every day is a <span>new chapter</span> waiting to be written.
        </h2>
    </div>

    <div class="login-container">
        <!-- Theme Toggle -->
        <div class="theme-toggle-wrapper">
            <button class="btn-theme-toggle" @onclick="ThemeService.ToggleThemeAsync" title="Change Theme">
                <i class="bi @(ThemeService.CurrentTheme == Mero_Dainiki.Entities.ThemeMode.Dark ? "bi-sun-fill" : "bi-moon-fill")"></i>
            </button>
        </div>

        <!-- Back Button -->
        <div class="register-back-overlay">
            <button class="btn-back" @onclick="GoBack">
                <i class="bi bi-arrow-left"></i>
            </button>
        </div>

        <div class="login-card">
            <!-- Brand Icon -->
            <div class="login-icon-wrapper fade-in">
                <i class="bi bi-person-plus"></i>
            </div>

            <!-- Title Section -->
            <h1 class="fade-in">Create Account</h1>
            <p class="text-muted fade-in">Join the quiet community of journalers.</p>

            <!-- Registration Form -->
            <div class="login-form fade-up">
                <EditForm Model="@registerModel" OnValidSubmit="HandleRegister">
                    <DataAnnotationsValidator />

                    <!-- Username Field -->
                    <div class="mb-3">
                        <label class="form-label">Username</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-person"></i></span>
                            <InputText class="form-control" @bind-Value="registerModel.Username" placeholder="sujan_p" />
                        </div>
                        <ValidationMessage For="@(() => registerModel.Username)" class="text-danger small mt-1" />
                    </div>

                    <!-- Email Field -->
                    <div class="mb-3">
                        <label class="form-label">Email Address</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-envelope"></i></span>
                            <input type="email" class="form-control" @bind="@registerModel.Email" placeholder="sujan@example.com" />
                        </div>
                        <ValidationMessage For="@(() => registerModel.Email)" class="text-danger small mt-1" />
                    </div>

                    <!-- Password Field -->
                    <div class="mb-3">
                        <label class="form-label">Password</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-lock"></i></span>
                            <InputText type="@(showPassword ? "text" : "password")" class="form-control" @bind-Value="registerModel.Password" placeholder="••••••••" />
                            <button type="button" class="btn btn-outline-secondary" @onclick="TogglePasswordVisibility">
                                <i class="bi bi-eye@(showPassword ? "-slash" : "")"></i>
                            </button>
                        </div>
                        <ValidationMessage For="@(() => registerModel.Password)" class="text-danger small mt-1" />
                    </div>

                    <!-- Confirm Password Field -->
                    <div class="mb-4">
                        <label class="form-label">Confirm Password</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-shield-check"></i></span>
                            <InputText type="@(showConfirmPassword ? "text" : "password")" class="form-control" @bind-Value="registerModel.ConfirmPassword" placeholder="••••••••" />
                            <button type="button" class="btn btn-outline-secondary" @onclick="ToggleConfirmPasswordVisibility">
                                <i class="bi bi-eye@(showConfirmPassword ? "-slash" : "")"></i>
                            </button>
                        </div>
                        <ValidationMessage For="@(() => registerModel.ConfirmPassword)" class="text-danger small mt-1" />
                    </div>

                    <!-- Error/Success Messages -->
                    @if (!string.IsNullOrEmpty(ErrorMessage))
                    {
                        <div class="alert alert-danger py-2 px-3 mb-3 small">
                            <i class="bi bi-exclamation-circle me-2"></i>@ErrorMessage
                        </div>
                    }

                    @if (!string.IsNullOrEmpty(SuccessMessage))
                    {
                        <div class="alert alert-success py-2 px-3 mb-3 small">
                            <i class="bi bi-check-circle me-2"></i>@SuccessMessage
                        </div>
                    }

                    <!-- Submit Button -->
                    <button type="submit" class="btn btn-primary login-btn w-100 mb-3" disabled="@IsLoading">
                        @if (IsLoading)
                        {
                            <span class="spinner-border spinner-border-sm me-2"></span>
                            <span>Setting up...</span>
                        }
                        else
                        {
                            <span>Create Account</span>
                            <i class="bi bi-arrow-right ms-2"></i>
                        }
                    </button>
                </EditForm>

                <!-- Sign In Link -->
                <div class="text-center">
                    <small>
                        Already a member? <a href="/login">Sign in</a>
                    </small>
                </div>
            </div>
        </div>

        <!-- Security Notice -->
        <div class="security-footer fade-in-delayed">
            <i class="bi bi-lock me-1"></i>
            End-to-end encrypted
        </div>
    </div>
</main>


@code {
    protected override async Task OnInitializedAsync()
    {
        ThemeService.OnThemeChanged += StateHasChanged;
        
        var isAuthenticated = await AuthService.IsAuthenticatedAsync();
        if (isAuthenticated)
        {
            Navigation.NavigateTo("/dashboard");
        }
    }

    public void Dispose()
    {
        ThemeService.OnThemeChanged -= StateHasChanged;
    }

    private RegisterModel registerModel = new();
    private bool IsLoading = false;
    private string? ErrorMessage { get; set; }
    private string? SuccessMessage { get; set; }
    private bool showPassword = false;
    private bool showConfirmPassword = false;

    private void TogglePasswordVisibility() => showPassword = !showPassword;
    private void ToggleConfirmPasswordVisibility() => showConfirmPassword = !showConfirmPassword;
    private void GoBack() => Navigation.NavigateTo("/");

    private async Task HandleRegister()
    {
        IsLoading = true;
        ErrorMessage = null;
        SuccessMessage = null;

        try
        {
            var result = await AuthService.RegisterAsync(new UserRegisterModel
            {
                Username = registerModel.Username,
                Email = registerModel.Email,
                Password = registerModel.Password,
                ConfirmPassword = registerModel.ConfirmPassword,
                Pin = ""
            });

            if (result.Success)
            {
                // Store username in localStorage for NavMenu display
                await JS.InvokeVoidAsync("localStorage.setItem", "username", result.Data?.Username ?? registerModel.Username);
                await JS.InvokeVoidAsync("localStorage.setItem", "userId", result.Data?.Id.ToString() ?? "");
                await JS.InvokeVoidAsync("localStorage.setItem", "authToken", "dummy_token");
                
                // Store expiration for 7 days
                var expiration = DateTime.UtcNow.AddDays(7).ToString("O");
                await JS.InvokeVoidAsync("localStorage.setItem", "authExpiration", expiration);
                
                SuccessMessage = "Account created successfully! Redirecting to dashboard...";
                await Task.Delay(1500);
                Navigation.NavigateTo("/dashboard", true);
            }
            else
            {
                ErrorMessage = result.ErrorMessage ?? "Registration failed";
            }
        }
        catch (Exception ex)
        {
            ErrorMessage = $"Error: {ex.Message}";
        }
        finally
        {
            IsLoading = false;
        }
    }

    private class RegisterModel
    {
        public string Username { get; set; } = "";
        public string Email { get; set; } = "";
        public string Password { get; set; } = "";
        public string ConfirmPassword { get; set; } = "";
    }
}

