@page "/entries"
@using Mero_Dainiki.Services
@using Mero_Dainiki.Entities
@inject IJournalService JournalService
@inject NavigationManager Navigation

<div class="container-fluid py-4">
    <div class="row mb-4">
        <div class="col-12 d-flex justify-content-between align-items-center">
            <div>
                <h1 class="display-6 fw-bold">
                    <i class="bi bi-journal-text me-2"></i>All Entries
                </h1>
                <p class="text-muted">Browse and manage your journal entries</p>
            </div>
            <a href="/journal" class="btn btn-primary">
                <i class="bi bi-plus-lg me-2"></i>New Entry
            </a>
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-md-4">
            <div class="input-group">
                <span class="input-group-text"><i class="bi bi-search"></i></span>
                <input type="text" class="form-control" placeholder="Search entries..." 
                       @bind="SearchTerm" @bind:event="oninput" />
            </div>
        </div>
        <div class="col-md-3">
            <select class="form-select" @bind="SelectedCategory">
                <option value="">All Categories</option>
                @foreach (var category in Enum.GetValues<EntryCategory>())
                {
                    <option value="@category">@category</option>
                }
            </select>
        </div>
        <div class="col-md-3">
            <select class="form-select" @bind="SortBy">
                <option value="newest">Newest First</option>
                <option value="oldest">Oldest First</option>
                <option value="title">By Title</option>
            </select>
        </div>
    </div>

    @if (IsLoading)
    {
        <div class="text-center py-5">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
        </div>
    }
    else
    {
        <div class="row">
            @if (FilteredEntries.Any())
            {
                @foreach (var entry in FilteredEntries)
                {
                    <div class="col-md-6 col-lg-4 mb-4">
                        <div class="card h-100" @onclick="() => ViewEntry(entry.Id)" style="cursor: pointer;">
                            <div class="card-header d-flex justify-content-between align-items-center">
                                <span class="badge bg-primary">@entry.Category</span>
                                <small class="text-muted">@entry.Date.ToString("MMM dd, yyyy")</small>
                            </div>
                            <div class="card-body">
                                <h5 class="card-title">@entry.Title</h5>
                                <p class="card-text text-muted">@TruncateText(entry.Content, 100)</p>
                                <span class="badge bg-secondary mt-2">@GetWordCount(entry.Content) words</span>
                            </div>
                            <div class="card-footer bg-transparent">
                                <div class="d-flex justify-content-between align-items-center">
                                    <span class="badge bg-light text-dark">@entry.PrimaryMood</span>
                                    <div>
                                        <button class="btn btn-sm btn-outline-primary me-1" @onclick:stopPropagation="true" @onclick="() => ViewEntry(entry.Id)">
                                            <i class="bi bi-eye"></i>
                                        </button>
                                        <button class="btn btn-sm btn-outline-danger" @onclick:stopPropagation="true" @onclick="() => DeleteEntry(entry.Id)">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="col-12 text-center py-5">
                    <i class="bi bi-journal-x display-1 text-muted"></i>
                    <h4 class="mt-3">No entries yet</h4>
                    <p class="text-muted">Start writing your first journal entry!</p>
                    <a href="/journal" class="btn btn-primary">Create Entry</a>
                </div>
            }
        </div>
    }
</div>

@code {
    private string SearchTerm { get; set; } = "";
    private string SelectedCategory { get; set; } = "";
    private string SortBy { get; set; } = "newest";
    private bool IsLoading { get; set; } = true;
    private List<JournalEntry> JournalEntries = new();

    protected override async Task OnInitializedAsync()
    {
        await LoadEntries();
    }

    private async Task LoadEntries()
    {
        IsLoading = true;
        var result = await JournalService.GetEntriesAsync(1, 100);
        if (result.Success && result.Data != null)
        {
            JournalEntries = result.Data;
        }
        IsLoading = false;
    }

    private IEnumerable<JournalEntry> FilteredEntries
    {
        get
        {
            var entries = JournalEntries.AsEnumerable();
            
            if (!string.IsNullOrEmpty(SearchTerm))
            {
                entries = entries.Where(e => 
                    e.Title.Contains(SearchTerm, StringComparison.OrdinalIgnoreCase) || 
                    e.Content.Contains(SearchTerm, StringComparison.OrdinalIgnoreCase));
            }
            
            if (!string.IsNullOrEmpty(SelectedCategory) && Enum.TryParse<EntryCategory>(SelectedCategory, out var category))
            {
                entries = entries.Where(e => e.Category == category);
            }
            
            return SortBy switch
            {
                "oldest" => entries.OrderBy(e => e.Date),
                "title" => entries.OrderBy(e => e.Title),
                _ => entries.OrderByDescending(e => e.Date)
            };
        }
    }

    private void ViewEntry(int id)
    {
        Navigation.NavigateTo($"/journal/{id}");
    }

    private async Task DeleteEntry(int id)
    {
        var result = await JournalService.DeleteEntryAsync(id);
        if (result.Success)
        {
            await LoadEntries();
        }
    }

    private string TruncateText(string text, int maxLength) =>
        string.IsNullOrEmpty(text) ? "" : 
        text.Length <= maxLength ? text : text[..maxLength] + "...";

    private int GetWordCount(string text)
    {
        if (string.IsNullOrWhiteSpace(text)) return 0;
        return text.Split([' ', '\t', '\n', '\r'], StringSplitOptions.RemoveEmptyEntries).Length;
    }
}
